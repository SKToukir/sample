<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_score_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context="toukir.best.com.livecricscore.newupdate.ScoreBoard">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/tool_bar"
        android:id="@+id/media_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#00000000"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView
                android:layout_gravity="center|bottom"
                android:id="@+id/adViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_home_footer">
            </com.google.android.gms.ads.AdView>

            <TextView
                android:textStyle="bold|italic"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:gravity="center"
                android:text=""
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:gravity="center"
                android:background="#00000000"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtTeamOne"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:text="Team One"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:background="@drawable/vs"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtTeamTwo"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:text="Team One"
                    android:layout_alignParentRight="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:id="@+id/txtInningsRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:visibility="gone"
                    android:textSize="22sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/c"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <TextView
                    android:visibility="gone"
                    android:textSize="22sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:id="@+id/txtScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <Button
                    android:visibility="gone"
                    android:id="@+id/btnShowSquad"
                    android:layout_marginTop="15dp"
                    android:text="Squad"
                    android:background="@drawable/custom_button"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txtScore"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />




            </RelativeLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>
